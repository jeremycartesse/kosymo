<h1 class="text-center" >Adding new offer</h1>
<br>
<br>
<div class="container">
  <div class="row">
    <%= simple_form_for [@offer] do |f| %>
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.input :zip_code %>
    <%= f.input :surface %>
    <%= f.input :photos, as: :attachinary %>
    <%= f.input :video %>
    <%= f.input :description %>
    <br>
    <%= f.label :room_number %>
    <%= f.select :room_number, Offer::ROOM_NUMBER %>
    <%= f.label :bedroom_number %>
    <%= f.select :bedroom_number, Offer::BEDROOM_NUMBER %>
    <%= f.label :good_type %>
    <%= f.select :good_type, Offer::GOOD_TYPE %>
    <br>
    <br>
    <ul class="input_count">
      <li><%= f.input :parking %></li>
      <li><%= f.input :ground %></li>
      <li><%= f.input :lift %></li>
      <li><%= f.input :floor %></li>
      <li><%= f.input :swimming_pool %></li>
      <li><%= f.input :cave %></li>
      <li><%= f.input :balcony %></li>
      <li><%= f.input :terrace %></li>
    </ul>
    <br class="text-center">
    <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
    <br>
    <br>
    <br>
    <br>
  </div>
</div>
