<h1>Offers#new</h1>
<p>Find me in app/views/offers/new.html.erb</p>


<%= simple_form_for [@offer] do |f| %>
  <%= f.input :name %>
  <%= f.input :city %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :zip_code %>
  <%= f.input :video %>
  <%= f.input :description %>
  <%= f.input :room_number %>
  <%= f.input :bedroom_number %>
  <%= f.input :type %>
  <%= f.input :parking %>
  <%= f.input :pictures %>
  <%= f.input :ground %>
  <%= f.input :lift %>
  <%= f.input :floor %>
  <%= f.input :swimming_pool %>
  <%= f.input :cave %>
  <%= f.input :balcony %>
  <%= f.input :terrace %>

  <%= f.submit "add a offer", class: "btn btn-primary" %>
<% end %>
