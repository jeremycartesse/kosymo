
<div class="row row-centered">
<div class="col-xs-12 col-sm-6 col-md-4 col-centered">
  <div class= "hvr-shrink">
    <div class="text-center" style="display: flex; justify-content: space-around; width: 250px; border: 1px solid lightgrey; margin-top: 20px;">
      <div>
        <div class="card-background">
          <div class="videohover-background">
            <video preload="auto" muted loop="loop" width="100%" onmouseout="this.pause()" onmouseover="this.play()">
              <source src= "<%= image_path("off#{indice + 1}.mp4")%>" type="video/mp4">
            </video>
          </div>
        </div>
        <div class="card-footer text-center" style="margin-top: 10px; margin-bottom: 20px; padding-right: 15px;" >
          <div style="float:left; position: relative;top:7px; left: 20px;">
            <%= image_tag "avatar.jpg", class: "avatarcard", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          </div>
          <div style="float:middle">
            <ul class="pictolist">
              <li><p style="font-size: 15px;font-weight:bold;">T<%=rand(1..6)%> <%=Offer::CITY_EX["#{indice + 1}".to_i]%></p></li>
              <li><%=rand(2..15)%> Avis</li>
            </ul>
            <% rating_ex = rand(100) %>
            <% if rating_ex < 20 %>
              <ul class="pictolist">
                <li style="color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-half-o" aria-hidden="true"></i></li>
              </ul>
            <% elsif rating_ex < 40 %>
              <ul class="pictolist">
                <li style="color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i></li>
              </ul>
            <% elsif rating_ex < 60 %>
              <ul class="pictolist">
                <li style="color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-half-o"></i>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i></li></li>
              </ul>
            <% elsif rating_ex < 80 %>
              <ul class="pictolist">
                <li style="color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o" aria-hidden="true"></i></li>
              </ul>
            <% elsif rating_ex < 100 %>
              <ul class="pictolist">
                <li style="color: #e60000;"><i class="fa fa-star"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-half-o"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o"></i></li>
                <li style=" color: #e60000;"><i class="fa fa-star-o" aria-hidden="true"></i></li></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>
