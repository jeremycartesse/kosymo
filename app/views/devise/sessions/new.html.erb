<div class= "container" style="display:block;margin-top: 20vh;">
<div class="text-center" style="font-family: Quicksand;"><h2>Connexion</h2></div>
<div class= "container" style="width: 50%">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" style="font-family: Quicksand;">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", :class => "action" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
